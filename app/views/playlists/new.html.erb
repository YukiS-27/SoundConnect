<div class="top-page-wrapper">
  <%= render partial: 'shared/side_section' %>

  <div class="main-content-wrapper">
    <div class="container">
      <h3 class="new-file-title">プレイリストを作成</h3>

      <%= @sound_post %>
      <%# 新規プレイリストを作成 %>
      <%= form_with model: @playlist do |f| %>
        <%= f.label :title, "タイトル" %><br >
        <%= f.text_field :title, class: 'form-input' %><br >

        <div class="action">
          <%= f.submit "プレイリストを作成", class: 'btn btn-primary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
