<div class="message" id="message-<%= message.id %>">
  <div class="user-names">
    <p><%= message.id %>: <%= image_tag message.user.profile.avatar.thumb30.url, class: 'icon' %><%= message.user.profile.name %>: <%= l message.created_at, format: '%Y年%-m月%-d日(%a) %H:%M' %></p>
  </div>
  <div class="message-text">
    <%= simple_format(h message.content) %>
  </div>
</div>
