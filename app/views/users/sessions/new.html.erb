<div class="container">
  <div class="sign_in-wrapper">
    <div class="sign_in-title">
      <h2><%= t('.sign_in') %></h2>
    </div>

    <%= form_with(model: @user, url: user_session_path, local: true, class: 'sign_in-form') do |f| %>
      <div class="field form-group">
        <%= f.label :email, class: 'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
      </div>

      <div class="field form-group">
        <%= f.label :password, class: 'form-label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="action">
        <%= f.submit t('.sign_in'), { class: 'btn btn-primary btn-block' } %>
      </div>
    <% end %>
    <hr>

    <div class="links">
      <%= link_to "新規登録はこちら", new_registration_path(resource_name) %><br />
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name) %><br />
    </div>
  </div>
</div>
