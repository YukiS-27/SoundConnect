<div class="container">
  <div class="sign_up-wrapper">
    <div class="sign_up-title">
      <h2><%= t('.sign_up') %></h2>
    </div>

    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user sign_up-form', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.fields_for :profile do |p| %>
          <%= p.label :name, "ユーザー名" %><br />
          <%= p.text_field :name, autofocus: true, autocomplete: "name", class: 'form-input' %>
        <% end %>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-input' %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input' %>
      </div>

      <div class="actions">
        <%= f.submit t('.sign_up'), { class: 'btn btn-primary btn-block' } %>
      </div>
    <% end %>
    <hr>

    <div class="links">
      <%= link_to "ログインはこちら", new_session_path(resource_name), class: 'sign_up-link' %><br />
    </div>
  </div>
</div>
