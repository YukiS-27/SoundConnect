<h1>投稿を編集</h1>

<%= form_with model: @sound_post do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description, "説明文" %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit "変更を保存" %>
<% end %>
