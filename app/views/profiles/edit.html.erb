<h1>プロフィール編集</h1>

<%= form_with model: @profile do |f| %>
  <div class="field">
    <%= image_tag @profile.avatar.thumb80.url, class: 'icon preview', id: :img_prev, alt: 'プロフィール画像', name: "avatar" %>
    <%= f.file_field :avatar, id: :user_img %>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <div class="field">
    <%= f.label :name, 'ユーザー名' %><br />
    <%= f.text_field :name, value: @profile.name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :introduction, '自己紹介文' %><br />
    <%= f.text_area :introduction, value: @profile.introduction %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<%# マイページへ戻る %>
<%= link_to t('devise.shared.links.back'), user_profile_path(current_user) %>
