<h3>メッセージルーム</h3>

<div id="messages">
  <%= render @messages %>
</div>

<form>
  <div class="form-group">
    <textarea data-behavior="room_speaker" data-room_id="<%= @room.id %>" placeholder="メッセージを入力" class="room__message-form_textarea" id="message-input"></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="送信" class="btn btn-primary" id="message-button">
  </div>
</form>
